<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane
        fx:controller="com.example.ui.controller.HomeController"
        xmlns:fx="http://javafx.com/fxml"
        prefWidth="1200"
        stylesheets="@../css/home.css"
        prefHeight="800">
    <top>
        <fx:include source="../fxml/components/header_component.fxml" fx:id="header"/>
    </top>

    <center>
        <VBox spacing="20" styleClass="main-content">
            <!-- Search Box -->
            <HBox spacing="10"
            alignment="CENTER_LEFT"
            styleClass="search-box"
            prefHeight="50"
            prefWidth="300"
            >
                <TextField fx:id="searchField" promptText="Tìm kiếm theo tên bài viết hoặc mô tả bài viết..." styleClass="search-field"/>
                <Button text="Search" onAction="#handleSearch" styleClass="search-button"/>
                <!-- Nút reload để load lại các thông tin -->
                <HBox fx:id="logout" onMouseClicked="#handleReload" spacing="5" alignment="CENTER">
                    <FontIcon iconLiteral="mdi-cached" iconSize="24" />
                    <Label text="Refresh" />
                </HBox>
                <Button  >
                    <FontIcon iconLiteral="mdi-cached" iconSize="24" />
                    <Label text="Refresh" />
                </Button>
            </HBox>

            <!-- Categories -->
            <Label text="Các danh mục:" styleClass="section-label"/>
            <FlowPane hgap="10" vgap="10" fx:id="categoryButtons">
                <!-- Categories will be loaded dynamically -->
            </FlowPane>

            <!-- Posts -->
            <FlowPane fx:id="postsContainer" hgap="20" vgap="20" alignment="TOP_CENTER"/>
        </VBox>
    </center>

    <bottom>
        <fx:include source="../fxml/components/footer_component.fxml" fx:id="footer"/>
    </bottom>
</BorderPane>