<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/create_post_popup.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ui.controller.CreatePostPopupController">
    <Label layoutX="20.0" layoutY="20.0" text="Create a New Post" />
    <TextArea fx:id="postContent" layoutX="20.0" layoutY="60.0" prefHeight="200.0" prefWidth="560.0" />
    <Button fx:id="submitButton" layoutX="20.0" layoutY="280.0" mnemonicParsing="false" onAction="#savePost" text="Submit" />
    <Button fx:id="closeButton" layoutX="111.0" layoutY="280.0" mnemonicParsing="false" onAction="#closePopup" styleClass="close-button" text="Cancel" />
</AnchorPane>
